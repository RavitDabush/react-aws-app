{
  "env": {
      "browser": true,
      "es6": true
  },
  "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "standard"
  ],
  "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
      "ecmaFeatures": {
          "jsx": true
      },
      "ecmaVersion": 2020,
      "sourceType": "module"
  },  
  "settings": {
    "react": {
      "version": "16.0"
    }
  },
  "plugins": [
      "react"
  ],
  "rules": {
      "semi": [2, "always"],
      "space-before-function-paren": [0, {"anonymous": "always", "named": "always"}],
      "camelcase": 0,
      "no-return-assign": 0,
      "react/react-in-jsx-scope": "off",
      "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
  },
  "root": true
}
